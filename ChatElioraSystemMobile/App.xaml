<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChatElioraSystemMobile"
             xmlns:converters="clr-namespace:ChatElioraSystemMobile.Converters"
             x:Class="ChatElioraSystemMobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <converters:MauiColorizingConverter x:Key="MauiColorizingConverter"/>

            
        </ResourceDictionary>
    </Application.Resources>
</Application>
